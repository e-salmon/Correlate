<Project>
  <PropertyGroup>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Microsoft.Extensions.* -->
    <PackageVersion_Microsoft_Extensions>5.0.0</PackageVersion_Microsoft_Extensions>
    <PackageVersion_Microsoft_Extensions Condition="'$(TargetFramework)' == 'netstandard2.1' Or '$(TargetFramework)' == 'netcoreapp3.1'">3.1.1</PackageVersion_Microsoft_Extensions>
    <PackageVersion_Microsoft_Extensions Condition="'$(TargetFramework)' == 'netstandard2.0' Or $(TargetFramework.StartsWith('netcoreapp2'))">2.1.0</PackageVersion_Microsoft_Extensions>
    <PackageVersion_Microsoft_Extensions Condition="$(TargetFramework.StartsWith('netstandard1')) Or $(TargetFramework.StartsWith('net46')) Or $(TargetFramework.StartsWith('netcoreapp1'))">1.1.0</PackageVersion_Microsoft_Extensions>

    <!-- System.Diagnostics.DiagnosticSource -->
    <PackageVersion_DiagnosticsSource>5.0.0</PackageVersion_DiagnosticsSource>
    <PackageVersion_DiagnosticsSource Condition="'$(TargetFramework)' == 'netstandard2.1' Or '$(TargetFramework)' == 'netcoreapp3.1'">4.7.0</PackageVersion_DiagnosticsSource>
    <PackageVersion_DiagnosticsSource Condition="'$(TargetFramework)' == 'netstandard2.0' Or $(TargetFramework.StartsWith('netcoreapp2'))">4.5.0</PackageVersion_DiagnosticsSource>
    <PackageVersion_DiagnosticsSource Condition="$(TargetFramework.StartsWith('netstandard1')) Or $(TargetFramework.StartsWith('net46')) Or $(TargetFramework.StartsWith('netcoreapp1'))">4.4.0</PackageVersion_DiagnosticsSource>

  </PropertyGroup>
</Project>
